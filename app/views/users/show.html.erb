<%= link_to "Edit account", edit_user_path %> <br>

<% if flash[:success] %>
  <%= flash[:success] %>
<% elsif flash[:valid] %>
  <%= flash[:valid] %>
<% elsif flash[:update] %>
  <%= flash[:update] %>
<% end %>

<% provide(:title, @user.first_name) %>

<h3>
  <%= gravatar_for @user %>
  <%= @user.name %>
</h3>

<a href="<%= user_path(@user) %>">back here</a>

<% if @team != nil %>
  <p>Team Name: <%= @team.name %></p>
  <p>Players: <%= %></p>
  <div class="card-columns">
<% @team.players.each do |player|%>
  <div class="card bg-info mb-3">
<%= image_tag player.image, class: "card-img-top" %>
 <div class="card text-center bg-warning mb-3">
  <h5 class="card-title"><%= player.name%></h5>
 <p class="card-text">Height: <%= player.height%></p>
 <p class="card-text">Rating: <%= player.baserating%></p>
</div>
</div>
<% end %>
</div>
<% else %>
<%= link_to 'Create your team!', new_team_path %>


  <%end%>

