<h2 class="text-center">All Players</h2>
<div class="card-columns">
<% @players.each do |player|%>
  <div class="card bg-info mb-3">
<%= image_tag player.image, class: "card-img-top" %>
 <div class="card text-center bg-warning mb-3">
  <h3 class="card-title"><%= player.name%></h5>
  <h6 class="card-subtitle mb-2 lead">"<%=player.catchphrase%>"</h6>
 <p class="card-text"><span class="teamdisplay">Height</span>: <%= player.height%></p>
 <p class="card-text"><span class="teamdisplay">Rating</span>: <%= player.baserating%></p>
<% if @team == nil %>
<%= link_to 'View Player', player_path(player), class: 'btn btn-info' %>
<% else @team.players.count < 5  %>
  <%= form_tag("/addplayer", method: "post") do %>
    <%= hidden_field_tag :player_id, player.id %>
    <%= submit_tag "Add Player" %>
  <% end %>
<% end %>
</div>
</div>
  <%end%>
  </div>
